amends "pkl/velocity.pkl"
import "pkl/prebuilts/git.pkl"

tests {
    new {
        name = "Golang tests"
        commands {
            git.clone
            new ShellCommand {
                command = "go test ./..."
            }
        }
    }
}

runtimes {
    new DockerRuntime {
        name = "golang"
        image = "golang:1.21"
    }
}

workflows {
    new {
        name = "Velocity"
        groups {
            new {
                name = "Golang tests"
                runtimes {
                    "golang"
                    // "python" // Uncomment to get invalid runtime error
                }
                tests {
                    "Golang tests"
                    // "non" // uncomment to get invalid test error
                }
            }
        }
    }
}

builds {
    new {
        name = "CLI"
        build_runtime = "golang"
        output = "dist/velocity"

        output_runtime = "golang"
        output_command = "velocity"

        commands {
            git.clone
            new ShellCommand {
                command = "make build-cli"
            }
        }
    }
}